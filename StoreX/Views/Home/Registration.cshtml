
@{
    ViewBag.Title = "Registration";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="UTF-8">
    <title>StoreX | Авторизироваться</title>


    <link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Open+Sans:600'>

    <link rel="stylesheet" href="~/Content/registration.css">



</head>

<body>
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign in</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign up</label>
            <div class="login-form">
                <form id="signin-form" class="sign-in-htm" action="/Login/LoginAction" method="post">
                    <div class="group">
                        <label for="signin-user" class="label">Никнейм</label>
                        <input id="signin-user" name="Username" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="signin-pass" class="label">Пароль</label>
                        <input id="signin-pass" name="Password" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <input id="signin-check" type="checkbox" class="check" checked>
                        <label for="signin-check"><span class="icon"></span> Запомнить меня</label>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Авторизироваться">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="#forgot">Забыли пароль?</a>
                    </div>
                </form>
                <form id="signup-form" class="sign-up-htm" action="/Account/Register" method="post">
                    <div class="group">
                        <label for="signup-user" class="label">Никнейм</label>
                        <input id="signup-user" name="Username" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="signup-pass" class="label">Пароль</label>
                        <input id="signup-pass" name="Password" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <label for="signup-pass-confirm" class="label">Повторите пароль</label>
                        <input id="signup-pass-confirm" name="ConfirmPassword" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <label for="signup-email" class="label">Email адрес</label>
                        <input id="signup-email" name="Email" type="text" class="input">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Зарегистрироваться">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <label for="tab-1">Уже зарегистрированы?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>

